
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class=text-center>退会手続き</h1>
      <div>
        <p class="alert alert-danger text-center">
          本当に退会してもよろしいでしょうか？<br>
          (アカウントが削除されます)
        </p>
      </div>
    </div>
  </div>

  <%= form_for( @public, url: public_public_user_path(@public), method: :delete) do |f| %>
  <div class="row">
 <h4 class="flash-message text-center"><%= flash.now[:public] %></h4>
    <div class="col-md-2">
    </div>
    <div class="col-md-3">
      <h3 class="text-right">
        <%= f.label :"メールアドレス" %>
      </h3>
      <h3 class="text-right">
        <%= f.label :"パスワード" %>
      </h3>
    </div>
    <div class="col-md-5">
      <h3 class="text-left">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </h3>
      <h3 class="text-left">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </h3>
    </div>
    <div class="col-md-2">

    </div>
  </div>
  <h3 class="text-center">
    <%= f.submit "退会確定", class: "btn btn-lg btn-danger", "data-confirm" => "本当に退会しますか？" %>
  </h3>
  <% end %>
</div>
