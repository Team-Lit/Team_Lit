<%= render 'header_login'%>

<h1>Public::PublicOrders#result</h1>
<p>Find me in app/views/public/public_orders/result.html.erb</p>

<h1>顧客購入情報</h1>
<h3>購入日</h3><%= @order.created_at %>
<h3>宛先名</h3><%= @order.address_name %>
<h3>郵便番号</h3><%= @order.zip %>
<h3>お届け先住所</h3><%= @order.address %>
<h3>配送ステータス</h3><%= @order.delivery_status %>

<h2>購入商品</h2>
<% @order_datails.each do |datail| %>
  <%= attachment_image_tag datail.jacket_image_id,:profile_image,fallback:"no_image.jpg",size:"40x40" %>
  <%= datail.product_name %>
  <%= datail.quantity %>
  <%= datail.pre_tax_price %>
<% end %>

<h2>料金</h2>
<h3>商品合計</h3><%= @order.total_price %>
<h3>送料</h3><%= @order.delivery_charge %>
<h3>消費税</h3><%= @order.tax_rate %>
<h3>総計</h3><%= @all_price %>
