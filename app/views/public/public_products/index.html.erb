    <div class="col-md-12">
      <h3 class="text-center">新規商品</h3>
      <% @new_products.each do |new|%>
      <div class="new">
        <%= link_to public_public_product_path(new) do %>
          <%= attachment_image_tag new, :jacket_image,fallback:"no_image.jpg",size:"150x150" %>
        <% end %><br>
        <%= new.artist.artist_name %><br>
        <%= new.product_name %><br>
          リリース:<%= simple_time(new.created_at) %>
      </div>
      <% end %>
    </div>
  </div>

