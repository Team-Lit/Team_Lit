
<% if flash[:notice] %>
  <div class="flash">
  	<%= flash[:notice] %>
  </div>
<% end %>

  <div class="row">
    <div class="col-md-6">
      <%= attachment_image_tag @product, :jacket_image,fallback:"no_image.jpg",size:"700x700" %>
    </div>
    <div class="col-md-4">
      <h1 class="text-center"><%= @product.product_name %></h1>
      <h2>アーティスト名：<%= @product.artist.artist_name %></h2>
      <h2>レーベル名：<%= @product.label.label_name %></h2>
      <h2>ジャンル：<%= @product.genre.genre_name %></h2>
      <h2>発売日：<%= @product.release_date %></h2>
      <h2>価格：<%= @product.pre_tax_price %>円</h2>
      <h2>在庫数：<%= @stock %>枚</h2>
      <h3>ステータス：
        <% if @stock > 0 %>
          販売中
        <% else %>
          在庫切れ
        <% end %>
      </h3>
      <%= form_for(@cart_item, url: public_public_product_public_cart_items_path(@product), html: {method: "post"}) do |f| %>
        <%= f.label :"個数" %>
        <%= f.number_field :quantity,min:1,placeholder: "個" %>
        <%= f.submit "カートに入れる", class: "btn btn-lg btn-primary" %>
      <% end %>
      <% if @product.favorited_by?(current_public) %>
        <li>
          <%= link_to public_public_product_public_favorites_path(@product), method: :delete do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
            <%= @product.favorites.count %> いいね
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to public_public_product_public_favorites_path(@product), method: :post do %>
            <i class="fa fa-heart-o" aria-hidden="true"></i>
            <%= @product.favorites.count %> いいね
          <% end %>
        </li>
<% end %>
    </div>
    <div class="col-md-2">
      <h3>曲名</h3>
        <% @product.disks.each do |disk| %>
          <div class="row">
            <h3><%= disk.disk_numbre %>枚目</h3>
            <% disk.songs.each do |song| %>
              <h4>・<%= song.song_title %></h4>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>

  

