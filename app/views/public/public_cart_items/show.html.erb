

<h1>カート内容</h1>

<table class="table">
		<thead>
			<tr>
				<th>ジャケット画像</th>
				<th>シングル/アルバム名</th>
				<th>価格</th>
        <th>数量</th>
        <th></th>
			</tr>
		</thead>
		<tbody>
		    <% @cart_item.each do |cart| %>
          <tr>
            <td>
              <%= attachment_image_tag cart.product,:jacket_image,fallback:"no_image.jpg",size:"40x40" %>
            </td>
            <td><%= cart.product.product_name %></td>
            <td><%= cart.product.pre_tax_price %></td>
            <td><%= cart.quantity %></td>
            <td>
              <%= link_to public_public_cart_item_path(cart),method: :delete do %>
                <button type="button" class="btn btn-danger">削除</button>
              <% end %>
            </td>
          </tr>
		    <% end %>
		</tbody>
</table>

<div class="row">
<div class="col-md-12">
<div class="text-center">
<%= link_to public_public_user_public_deliveries_path(current_public) do %>
  <button type="button" class="btn btn-success">購入</button>
  </div>
  </div>
  </div>
<% end %>