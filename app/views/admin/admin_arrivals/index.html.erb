<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h1 class="text-center">入荷履歴一覧</h1>
      <div class="text-right">
        <%= link_to "新規商品追加", new_admin_admin_product_path, class: "btn btn-lg btn-default" %>
      </div>

      <table class="table">
        <tr>
          <th></th>
          <th>入荷日</th>
          <th>入荷商品名</th>
          <th>入荷個数</th>
        </tr>

        <% @arrivals.each do |arrival| %>
          <tr>
            <td></td>
            <td><%= arrival.arrival_date %></td>
            <td>
              <% if arrival.product != nil %>
                <%= link_to "#{arrival.product.product_name}", admin_admin_product_path(arrival.admin_product_id) %>
              <% else %>
                <p>商品情報はありません</p>
              <% end %>
            </td>
            <td><%= arrival.arrival_quantity %>枚</td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>