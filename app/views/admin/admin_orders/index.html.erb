<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="text-center">受注履歴一覧</h1>
      <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" />

      <div class="order-search-box text-center">
				<%= form_tag(admin_admin_orders_path, method: :get) do %>
					<%= text_field_tag :search, "", placeholder: "顧客名、宛名で検索" %>
					<%= button_tag '<i class="fa fa-search"></i>'.html_safe, type: 'submit', :name => nil %>
				<% end %>		
      </div>

      <table class="table table-striped">
        <tr>
          <th>顧客名</th>
          <th>宛名</th>
          <th>受注日</th>
          <th>購入金額</th>
          <th>配送ステータス</th>
          <th></th>
        </tr>
<% binding.pry %>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.public.end_user_last_name + " " + order.public.end_user_first_name %></td>
            <td><%= order.address_name %></td>
            <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= order.total_price.round(0) %>円</td> 
            <td><%= order.delivery_status %></td>
            <td><%= link_to "詳細", admin_admin_order_path(order.id), class: "btn btn-default" %></td>
          </tr>
        <% end %>
      </table>

    </div>
  </div>
</div>

<h3 class="text-center">
  <%= paginate @orders %>
</h3>